function SEGURIDAD_DE_LA_INFORMACION()
{
  //Es el forlder donde va a crear el archivo de consulta
  var dstFolderId1 = '1Gp6-k4GeTVCwPvGXIRKrPRJyNYzds2Fq';
  //Es el archivo original desde donde se va a crear la copia
  var srcFileId1 = '1_E1v5MCFPTMrgzKwHXo5wBDl9D31WQK76vuwJQZ73Ps';
  //Es el objeto del srcFileId1
  var srcFile = DriveApp.getFileById(srcFileId1);
  //Es el objeto de dstFolderId1
  var dstFolder = DriveApp.getFolderById(dstFolderId1);
  //La fecha de ejecución del codigo para que sea cargada en el nombre del archivo nuevo
  var date = Utilities.formatDate(new Date(), "GMT+1", "dd/MM/yyyy")
  //Nombre del nuevo archivo que va a incluir la fecha
  var nameFile = date+"_"+srcFile.getName();
  //Crea el archivo con base al nombre anterior
  var ssnameFile = SpreadsheetApp.create(nameFile);
  //Es el objeto de ssnameFile
  var dstFileId1 = ssnameFile.getId();
  //Carga en memoria la hoja1 destino por defecto
  var dstSheet = 'Hoja 1';
  //Cargar en memoria el rango origen
  var srcRange = 'A1:AE6031';
  //Carga en memoria la hoja origen
  var srcSheet = 'Vulnerabilidades';
  //Sera el ID del area y debe hacer match con fila del archivo de reportes 
  var idArea = '15';  
  //VARIABLE FILTRO DE AREA
  var nomArea = "SEGURIDAD DE LA INFORMACION";
 
  
  //Funcion que copia el archivo nuevo y le pone el nombre con la fecha y lo mueve al folder destino
  DriveApp.getFileById(ssnameFile.getId()).moveTo(dstFolder);
  //Hace llamado a la funcion que envia toda la data de el archivo origen al nuevo arrchivo y para eso se le envian 6 variables 
  copypaste(srcFileId1,srcSheet,srcRange,dstFileId1,dstSheet,srcRange);
 //Hace filtro de la información a mostrar en los archivos
  ActFiltro(dstFileId1,dstSheet,nomArea);
 //Hace llamado a funcion ActRepo y le pasa 2 variables 
  ActRepo(idArea,dstFileId1);
}
