function AREAS()
{
  ARQUITECTURA();
  DISPONIBILIDAD_DE_APLICACIONES();
  DISPONIBILIDAD_DE_CANALES();
  GESTION_DE_SERVICIOS_DE_TI();
  GESTION_DE_USUARIOS();
  INFORMÁTICA();
  INFRAESTRUCTURA();
  INFRAESTRUCTURA_VIRTUALIZACION();
  MICROINFORMATICA();
  REDES_Y_TELECOMUNICACIONES();
  SEGURIDAD_DE_TI();
