  INFRAESTRUCTURA_SOA();
  APLICATIVOS_ANALITICA_Y_ROBOTICA();
  SEGURIDAD_DE_LA_INFORMACION();
  TELEFONO_ROJO();
  LEASING();
 
 
}
 
 
function ARQUITECTURA()
{
  var dstFolderId1 = '1vID-E0amG0Hs_n_qArlomqMK_fwHOnRM';
  var srcFileId1 = '19v3e99D8VAHyQMjHM9k6cQTGIOP1W6bd4bTJ1hLk8rg';
  var srcFile = DriveApp.getFileById(srcFileId1);
  var dstFolder = DriveApp.getFolderById(dstFolderId1);
  var date = Utilities.formatDate(new Date(), "GMT+1", "dd/MM/yyyy")
  var nameFile = date+"_"+srcFile.getName();
  var ssnameFile = SpreadsheetApp.create(nameFile);
  var dstFileId1 = ssnameFile.getId();
  var dstSheet = 'Hoja 1';
  var srcRange = 'A1:AE6031';
  var srcSheet = 'Vulnerabilidades';
  var idArea = '1'; 
  function create_Filter(){
    var  ss = SpreadsheetApp.getActiveSpreadsheet(); 
    var sheet1 = ss.getSheetByName("Hoja 1"); 
    var  range = sheet1.getRange("i:i");  
    //adding the filter
    var  filter = range.createFilter();  
    var  Filter_Criteria2 = SpreadsheetApp.newFilterCriteria().whenTextEqualToAny(["ARQUITECTURA"]);
    var  add_filter2 = filter.setColumnFilterCriteria(9,Filter_Criteria2);
    var  range1 = sheet1.getDataRange();
    }
  
  DriveApp.getFileById(ssnameFile.getId()).moveTo(dstFolder);
  copypaste(srcFileId1,srcSheet,srcRange,dstFileId1,dstSheet,srcRange);
  ActRepo(idArea,dstFileId1);
}
 
