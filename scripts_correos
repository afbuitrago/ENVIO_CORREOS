function copypaste(sourceidfile,sourcesheet,sourcerange,destidfile,destisheet,destirange) 
{
  //Source file
  //Abro archivo origen
  var srcFileActive   = SpreadsheetApp.openById(sourceidfile);
  //Abro hoja del archivo origen
  var srcSheetActive  = srcFileActive.getSheetByName(sourcesheet);
  //Selecciono el rango de la hoja del archivo origen
  var srcRangeActive  = srcSheetActive.getRange(sourcerange);
  //Guardo la data del rango de la hoja del archivo origen
  var data            = srcRangeActive.getValues();
 
  //Destination file
  //Abro archivo destino
  var dstFileActive   = SpreadsheetApp.openById(destidfile);
  //Abro la hoja del archivo destino
  var dstSheetActive  = dstFileActive.getSheetByName(destisheet);
 
  //Transfer to destination range
  //Seleccionar el rango destino y lo "creamos" o limpiamos
  dstSheetActive.getRange(destirange).clearContent();
  //Pegamos la data en el rango destino
  dstSheetActive.getRange(destirange).setValues(data);
}
 
function ActFiltro(dstFileId1,dstSheet,nomArea)
{
    var  srcRangoFiltro1 = 'A:AE';
    var  ss = SpreadsheetApp.openById(dstFileId1); 
    var  sheet1  = ss.getSheetByName(dstSheet);
    var  range1 = sheet1.getRange(srcRangoFiltro1);  
    
    //Crea variable de filtro
    var  filter = range1.createFilter();
 
    //adding the filter 1
    var  Filter_Criteria1 = SpreadsheetApp.newFilterCriteria().whenTextEqualToAny([nomArea]);
    var  add_filter1 = filter.setColumnFilterCriteria(9,Filter_Criteria1);
    var  range1 = sheet1.getDataRange();
 
    //adding the filter 2
    var  Filter_Criteria2 = SpreadsheetApp.newFilterCriteria().setHiddenValues(['ABIERTA CON CONTROL COMPENSATORIO', 'REMEDIADA', 'FALSO POSITIVO', 'PROYECTO/ADMINISTRATIVO'])
    var  add_filter2 = filter.setColumnFilterCriteria(13,Filter_Criteria2);
    var  range1 = sheet1.getDataRange();   
 
} 
 
 
function ActRepo(idArea,dstFileId1)
{
   //Se guarda el id del archivo repositorio
   var dstRepo = '15jO8W_14cUplH69KSQN6xaibQWjQdvAsSgxFUDQ9Z9I';
   //Se guarda en variable el nombre der la hoja del archivo repositorio
   var dstSheet = 'INFORMES';
   //Guarda en variable, la construcción del link del archivo nuevo a enviar
   var LinkInforme = 'https://docs.google.com/spreadsheets/d/'+dstFileId1;
 
   //Destination file
   //Abre el archivo Repositorio
   var dstFileActive   = SpreadsheetApp.openById(dstRepo);
   //Abre la hoja INFORMES del archivo Repositorio
   var dstSheetActive  = dstFileActive.getSheetByName(dstSheet);
   //Define el rango donde va a pegar el link creado
   var dstRange = 'B'+idArea;
 
   //Transfer to destination range
   //Seleccionar el rango destino y lo "creamos" o limpiamos
   dstSheetActive.getRange(dstRange).clearContent();
   //Pegamos la data en el rango destino osea se pega el link
   dstSheetActive.getRange(dstRange).setValue(LinkInforme);
 
    
}
 
 
function RUN()
{
  AREAS();
}
 
 




